// Class to holds a Delegation attributes
function DeleViewModel(category, university, order, year, execChief, execSocial, execFinance, execMachine, execSponsor, execMarketing, parrain1, parrain2, photoUrl) {
  var self = this;
	
	self.Category = category;
	self.University = university;
	self.Order = order;
	self.Year = year;
	self.ExecChief = execChief;
	self.ExecSocial = execSocial;
	self.ExecFinance = execFinance;
	self.ExecMachine = execMachine;
	self.ExecSponsor = execSponsor;
	self.ExecMarketing = execMarketing;
	self.Parrain1 = parrain1;
	self.Parrain2 = parrain2;
	self.PhotoUrl = photoUrl;
}

function UniversityViewModel(category, university) {
	var self = this;
	var minDeleForRoundabout = 5;
		
	self.Category = category;
	self.University = university;
	self.Delegations = ko.observableArray();
	
	// Method to add dummies to Deles for a better jQuery Roundabout rendering
	self.AddDummyDelegationsIfNecessary = function() {
		var safetyCounter = 0;
		
		while(self.Delegations().length < 5 && safetyCounter < 5) {
			self.Delegations.push(new DeleViewModel("", "removeme"));
			safetyCounter++;
		}
	};
}
